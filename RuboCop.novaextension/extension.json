{
    "identifier": "Mecham.RuboCop",
    "name": "RuboCop",
    "organization": "Mecham",
    "description": "Lint your Ruby source files with RuboCop.",
    "version": "0.5.2",
    "categories": ["issues"],
    "repository": "https://github.com/jsmecham/nova-rubocop",
    "bugs": "https://github.com/jsmecham/nova-rubocop/issues",
    "license": "MIT",
    "main": "main.dist.js",
    "activationEvents": [
        "onLanguage:ruby"
    ],
    "entitlements": {
        "process": true
    },
    "config-workspace": [
		{
			"key": "rubocop.format-on-save",
			"title": "Format on save",
			"description": "Whether to format documents when saved.",
			"type": "boolean",
			"default": true
		}
	]
}
