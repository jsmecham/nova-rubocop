{
    "identifier": "Mecham.RuboCop",
    "name": "RuboCop",
    "vendor": "Mecham",
    "description": "Integrates with RuboCop to provide contextual issues in Nova.",
    "version": "0.1.0",
    "categories": ["issues"],
    "main": "main.js",
    "activationEvents": [
        "onLanguage:ruby"
    ],
    "entitlements": {
        "process": true
    },
    "config": [
        {
            "key": "Mecham.Rubocop.UseBundler",
            "title": "Use bundler?",
            "description": "Whether bundler should be used to run Rubocop.",
            "type": "boolean",
            "link": "https://bundler.io/man/bundle-exec.1.html",
            "default": false
        }
    ]
}
